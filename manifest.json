{
    "manifest_version": 3,
    "name": "Group Content Sharing",
    "description": "Create groups and share articles or videos with friends.",
    "version": "1.0",
    "action": {
      "default_popup": "popup.html",
      "default_title": "Share Content"
    },
    "permissions": ["activeTab", "storage"],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  